{
  "compilerOptions": {
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "module": "es2020",
    "target": "es2019",
    "jsx": "react",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": false,
    "skipLibCheck": true
  },
  "include": ["src", "bin"],
  "exclude": ["node_modules"]
}
